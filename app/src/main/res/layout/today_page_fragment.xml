<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rel_background">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
                android:id="@+id/current_temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="30Â°"
                android:textSize="80sp"
                android:textColor="#000000"
                android:fontFamily="@font/quicksand_bold"/>

        <ImageView
                android:id="@+id/current_weather_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/current_temp_text"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:id="@+id/current_weather_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_weather_icon"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:text="Sunny"
                android:textSize="24sp"
                android:textColor="#707070"
                android:fontFamily="@font/quicksand_medium"/>

        <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_weather_text"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel_wind">

                <ImageView
                        android:id="@+id/current_wind_icon"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/wind_icon"/>

                <TextView
                        android:id="@+id/current_wind_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/current_wind_icon"
                        android:text="2km/h"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rel_aqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rel_wind"
                    android:layout_marginStart="16dp">

                <ImageView
                        android:id="@+id/current_aqi_icon"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/aqi_icon"/>

                <TextView
                        android:id="@+id/current_aqi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/current_aqi_icon"
                        android:text="2km/h"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rel_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rel_aqi"
                    android:layout_marginStart="16dp">

                <ImageView
                        android:id="@+id/current_humidity_icon"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/humidity_icon"/>

                <TextView
                        android:id="@+id/current_humidity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/current_humidity_icon"
                        android:text="32%"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout"
                android:layout_marginTop="32dp">

            <TextView
                    android:id="@+id/today_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Today"
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:fontFamily="@font/quicksand_medium"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hourly_recycle_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/today_text"
                    android:layout_margin="24dp"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>

</RelativeLayout>

</ScrollView>