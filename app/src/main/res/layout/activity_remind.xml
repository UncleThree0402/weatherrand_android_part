<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RemindActivity"
        android:background="@drawable/rainy_background"
        android:id="@+id/rel_remind">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/text_background"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:layout_marginStart="1dp"/>

    <TextView
            android:id="@+id/weather_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rainy Day"
            android:textAlignment="center"
            android:textSize="48sp"
            android:fontFamily="@font/atomic_age"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"/>

    <TextView
            android:id="@+id/remind_reminder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember to bring Umbrella"
            android:layout_below="@+id/weather_text"
            android:layout_marginTop="120dp"
            android:textSize="24sp"
            android:fontFamily="@font/allan"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>